{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/types/*": ["types/*"],
      "@/hooks/*": ["hooks/*"],
      "@/pages/*": ["src/pages/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "entryPoints": [
      "hooks/custom/useCurrentLocation/useCurrentLocation.ts",
      "hooks/custom/useDebounce/useDebounce.ts",
      "hooks/custom/usePaymentTypes/usePaymentTypes.ts",
      "hooks/custom/useProductDetailTemplate/useProductDetailTemplate.ts",
      "hooks/custom/useUpdateRoutes/useUpdateRoutes.ts",
      "hooks/custom/useWishlist/useWishlist.ts"
    ],
    "out": "hooksDoc"
  }
}
